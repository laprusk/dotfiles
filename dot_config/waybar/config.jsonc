            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pactl set-sink-mute 0 toggle",
        "on-click-right": "pavucontrol",
        "scroll-step": 5
    },
    "pulseaudio/slider": {
        "max": 100,
        "min": 0,
        "orientation": "horizontal"
    },
    "custom/media": {
        "format": "{icon} {}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
